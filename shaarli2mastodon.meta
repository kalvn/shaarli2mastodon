description="Automatically publish your Shaares to your Mastodon account."
parameters="MASTODON_INSTANCE;MASTODON_APPID;MASTODON_APPSECRET;MASTODON_APPTOKEN;MASTODON_TOOT_FORMAT;MASTODON_HIDE_URL"
parameter.MASTODON_INSTANCE="Your Mastodon instance"
parameter.MASTODON_APPID="Mastodon application ID"
parameter.MASTODON_APPSECRET="Mastodon application secret"
parameter.MASTODON_APPTOKEN="Mastodon application token"
parameter.MASTODON_TOOT_FORMAT="Placeholders: \${url} \${permalink} \${title} \${tags} \${description}"
parameter.MASTODON_HIDE_URL="Hide \${url} when sharing a note. Default: no"